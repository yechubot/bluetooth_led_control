<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivBTcheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/bluetooth_grayicon" />

    <ToggleButton
        android:id="@+id/tBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textOff="안방 전등 OFF"
        android:textOn="안방 전등 ON" />

    <ToggleButton
        android:id="@+id/tBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textOff="작은방 전등 OFF"
        android:textOn="작은방 전등 ON" />

    <ToggleButton
        android:id="@+id/tBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textOff="거실 전등 OFF"
        android:textOn="거실 전등 ON" />
